<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ClientPanelController">
    <HBox alignment="CENTER">
        <Text text="⌂" textAlignment="CENTER"/>
    </HBox>
    <HBox>
        <ComboBox fx:id="disksBox" onAction="#selectDiskAction"/>
        <Button onAction="#btnHomePathAction" text="⌂"/>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS"/>
        <Button onAction="#btnPathUpAction" text="↑"/>
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS"/>

    <properties>
        <ctrl>
            <fx:reference source="controller"/>
        </ctrl>
    </properties>
</VBox>
